<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector"
    android:focusable="true"
    android:clickable="true"
    android:layout_marginTop="@dimen/list_item_extra_padding"
    android:layout_marginRight="@dimen/list_item_extra_padding"
    android:layout_marginLeft="@dimen/list_item_extra_padding"
    android:layout_marginBottom="@dimen/list_item_extra_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/catagory_name_text_view"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="catagory count"
        android:id="@+id/catagory_detail_item_count"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/grey"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/divider_top_padding"
        android:src="@drawable/divider"/>

</LinearLayout>